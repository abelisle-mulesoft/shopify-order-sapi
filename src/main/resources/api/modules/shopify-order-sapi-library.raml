#%RAML 1.0 Library
usage:
    Defines the Shopify Order data type as per the standardized format.

uses:
  AddressTypes: ./address-library.raml
  ContactTypes: ./contact-library.raml
  ProductTypes: ./product-library.raml

types:
  ShopifyOrders:
    type: array
    items: ShopifyOrder

  ShopifyOrder:
    type: object
    example: !include shopify-order-sapi-example.json
    properties:
      customer:
        type: ContactTypes.Contact
      email: ContactTypes.Email
      phone: ContactTypes.Phone
      billingAddress:
        type: AddressTypes.BillingAddress
      shippingAddress:
        type: AddressTypes.ShippingAddress
      lineItems:
        type: array
        items: LineItem
        minItems: 1

  LineItem:
    type: ProductTypes.Product
    properties:
      quantity:
        type: integer

